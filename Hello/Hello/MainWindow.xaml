<Window x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello"
        mc:Ignorable="d"
        Title="Моя первая программа!" Height="139" Width="348" WindowStartupLocation="CenterScreen" Background="#FFB5F1E1">
    <Grid>
        <Label Content="Как Вас зовут?" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbHello" HorizontalAlignment="Left" Height="23" Margin="104,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221"/>
        <Button Content="Привет!" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="315" Click="cmHello"/>
        <Button Content="Пока!" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="315" Click="cmClose"/>
    </Grid>
</Window>
